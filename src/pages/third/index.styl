.page
	display flex
	flex-direction: column

	.formsContainer
		position relative
		height 300px
		margin-top 30px

		>section
			display grid
			grid-template-columns: auto
			grid-gap: 30px
			width 100%
			position absolute
			top 0
			opacity 0
			pointer-events: none
			filter blur(5px)
			transition: .6s

			&.active
				opacity: 1
				pointer-events: all
				transform:none
				filter none

			&.prev
				transform translateX(50%)

			&.next
				transform translateX(-50%)

			>p
				color gray6
				font-variation-settings: "wght" 500

			.fields
				display grid
				grid-template-columns: auto
				grid-gap: 20px

				.row
					display grid
					grid-template-columns: repeat(2,1fr)
					grid-gap: 20px

					@media screen and (max-width 620px)
						grid-template-columns: auto

			.actions
				display grid
				grid-template-columns: auto 1fr auto


				.disabled
					pointer-events: none

				.next
					grid-column: 3

				.prev
					grid-column: 1

					.icon
						transform: rotate(180deg)
						transform-origin: center

				.icon
					height 10px

				
				@media screen and (max-width: 480px)
					grid-template-columns: auto
					grid-gap: 20px

					.prev,.next
						grid-column: unset
						display flex
						flex-direction: column

	.modal
		width 420px
		max-width: 90vw
		box-sizing: border-box

		@media screen and (max-width 460px)
			padding 30px

		ul
			display grid
			grid-gap 10px
			width 100%

			.seperator
				height 1px
				background: gray9
				width 100%

			li
				display flex
				justify-content space-between
				align-items center

				span
					font-variation-settings: "wght" 300
			