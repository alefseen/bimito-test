.wrapper
	width 200px
	height 200px
	flex 0 0 200px
	display flex
	flex-direction: column
	justify-content center
	align-items center
	padding 50px
	background: gray12
	border 1px solid gray9
	border-radius: 10px
	box-sizing: border-box
	position relative

	&.disabled
		&:after
			content:''
			position absolute
			left 0
			right 0
			bottom 0
			top 0
			border-radius: 10px
			background: rgba(gray11,80%)

	>img
		width 90px
		height 90px
		margin-bottom 20px

	>span
		text-align center
		font-size: 1.1em
		font-variation-settings: "wght" 500

