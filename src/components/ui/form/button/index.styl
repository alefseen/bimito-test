.button
	appearance: none
	border: none
	outline: none
	cursor: pointer
	display: inline-flex
	align-items: center
	justify-content: center
	font-family: inherit
	font-variation-settings: "wght" 500;
	font-size: 16px
	border 1px solid transparent
	border-radius: 23px
	position: relative
	white-space: nowrap
	transition: all 0.3s
	background: none
	height: 46px
	min-height: 46px
	min-width: unset 
	padding: 0 40px

	&.disabled
		pointer-events: none

	&.contained
		background: lightGreen
		color: gray12
		fill gray12

		&.disabled
			background gray7

		&:hover,&:focus
			background: darken(lightGreen, 8%)

	&.outlined
		border 1px solid lightGreen
		fill lightGreen
		color lightGreen

		&.disabled
			border: 1px solid gray7
			background: none;
			fill:gray7
			color gray7
			filter: grayscale(1)

		&:hover,&:focus
			border-color: darken(lightGreen, 8%)
			fill darken(lightGreen, 8%)
			color darken(lightGreen, 8%)


	> span
		display: flex

	> i
		height: 18px
		width: 18px
		fill: inherit
		color inherit
		font-style normal
		display flex
		align-items center
		justify-content center

		&.icon
			margin-left: 20px

		&.afterIcon
			margin-right: 20px

		> *
			fill: inherit
			width: 100%
			height: 100%
			margin: 0